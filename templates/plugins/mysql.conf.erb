LoadPlugin mysql
<Plugin "mysql">
<%- scope.lookupvar('database_items').each do |database_item| -%>
  <Database "<%= database_item['db_schema'] %>">
    Host "<%= database_item['host'] %>"
    Port "<%= database_item['port'] %>"
    User "<%= database_item['user'] %>"
    Password "<%= database_item['password'] %>"
  </Database>
<%- end -%>
</Plugin>
